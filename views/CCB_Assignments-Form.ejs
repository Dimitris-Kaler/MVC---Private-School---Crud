<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('head')%>


        <title>CCB Assignments Form</title>


</head>

<body>
    <div id="container">
        <!---NAVIGATOR-->
        <%- include('navbar') %>

            <!---MAIN WITH FORMS--->
            <div class="form-message main">
                <!-- <h2 class="animate-heading">Students Form</h2> -->
                <button id="addBtn" class="btn-primary m-1 "><svg xmlns="http://www.w3.org/2000/svg" width="16"
                        height="16" fill="currentColor" class="bi bi-file-earmark-code" viewBox="0 0 16 16">
                        <path
                            d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z" />
                        <path
                            d="M8.646 6.646a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1 0 .708l-2 2a.5.5 0 0 1-.708-.708L10.293 9 8.646 7.354a.5.5 0 0 1 0-.708zm-1.292 0a.5.5 0 0 0-.708 0l-2 2a.5.5 0 0 0 0 .708l2 2a.5.5 0 0 0 .708-.708L5.707 9l1.647-1.646a.5.5 0 0 0 0-.708z" />
                    </svg> Add Assignment</button>
                <!----------FORMS--------->
                <form id="assignmentsForm" name="assignmentForm" class="hidden basic-form ml-1"
                    action="/CCB_Assignments-Form" method="post">
                    <div id="form-body">
                        <h3 class="form-heading">Add New Assignment</h3>
                        <div class="form-group">
                            <label for="assignment-title">Title</label>
                            <input type="text" class="form-control basic-input" id="assignment-title" name="title"
                                placeholder="ex.Team-project1,ex2.build e-shop" aria-label="First name">
                            <span class="error-message coursesError">
                        </div>
                        <div class="form-group">
                            <label for="assignmentDescription">Description</label>
                            <textarea name="description" placeholder="Assignment Description" id="assignmentDescription"
                                class="form-control basic-input"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="submission-date">Submission Date </label>
                            <input type="date" class="form-control basic-input" id="submission-date" name="subTime"
                                placeholder="ex.2021-05-02">
                            <span class="error-message coursesError">
                            </span>
                        </div>
                        <div class="form-group">
                            <label for="oral-mark">Oral Mark</label>
                            <input type="number" class="form-control basic-input" id="oral-mark" name="maxOralMark"
                                placeholder="ex.20">
                            <span class="error-message coursesError"></span>

                        </div>
                        <div class="form-group">
                            <label for="total-mark">Total Mark</label>
                            <input type="number" class="form-control basic-input" id="total-mark" name="maxTotalMark"
                                placeholder="ex.100">
                            <span class="error-message coursesError">
                            </span>
                        </div>
                        <div class="form-button1">
                            <label for="submitBtn"></label>
                            <input type="submit" class="btn btn-primary" id="submitBtn" value="Submit">
                        </div>
                    </div>
                </form>
                <!---TABLE-->
                <div id="table-area">
                    <table id="table-assign" class="display table">
                        <h4 class="table-heading">
                            <%=tableTitle%>
                        </h4>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Max Oral Mark</th>
                                <th>Max Total Mark</th>
                                <th>Sub Date Time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% for(let assignment in assignmentsArray.data) { %>
                                <tr>
                                    <td>
                                        <%= assignmentsArray.data[assignment].id %>
                                    </td>
                                    <td>
                                        <%= assignmentsArray.data[assignment].title %>
                                    </td>
                                    <td>
                                        <%= assignmentsArray.data[assignment].description %>
                                    </td>
                                    <td>
                                        <%= assignmentsArray.data[assignment].max_oral_mark %>
                                    </td>
                                    <td>
                                        <%= assignmentsArray.data[assignment].max_total_mark %>
                                    </td>
                                    <td>
                                        <%= assignmentsArray.data[assignment].sub_date_time %>
                                    </td>
                                    <td><span><a href='/CCB_Assignments-Form/update/<%=assignmentsArray.data[assignment].id%>'
                                                class="fas fa-pencil-alt update anchor" title="Edit"></a></span>
                                        <span><a href="/CCB_Assignments-Form/delete/<%=assignmentsArray.data[assignment].id%>"
                                                data-bs-toggle="modal" data-bs-target="#example"
                                                class="deleteRef far fa-trash-alt anchor"></i>
                                    </td></span>
                                </tr>
                                <% } %>

                        </tbody>
                    </table>

                </div>
                <!-------------------------DELETE MODAL------------>

                <div class="modal fade" id="example" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Delete Data</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are You Sure You Want Delete This Row
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No!!!!</button>
                                <a href="" class="modalConfirm btn btn-primary">Yes Delete This Data</a>

                            </div>
                        </div>
                    </div>
                </div>


                <!--------FOOTER------>

                <%-include('footer')%>
            </div>
    </div>

    <script type="text/javascript" src="/javascripts/assignments.js"></script>
</body>

</html>